/* pages/myAnswer/myAnswer.wxss */

.tapContainer {
  background: #fff;
}

.upload_btn {
  position: fixed;
  width: 60px;
  height: 60px;
  right: 20px;
  bottom: 20px;
}

.all_count {
  padding: 20px;
  border-bottom: 1px solid #F5F5F5;
}

.item_container {
  display: flex;
  flex-direction: column;
}
.item {
  display: flex;
  flex-direction: row;
  padding: 10px;
  border-bottom: 1px solid #F5F5F5;
  align-items: center;
  font-size: 15px;
}
.left {
  width: 100px;
  height: 80px;
}
.thumbnail {
  width: 100%;
  height: 100%;
}
.count {
  position: absolute;
  bottom: 0px;
  left: 0px;
  background-color: black;
  opacity: 0.3;
  color: #fff;
  padding: 2px 5px;
}
.left{
  position: relative;
}

.right {
  padding-left: 10px;
  display: flex;
  flex-direction: column;
  width: 60%;
  padding-right: 5px;
  flex-wrap: wrap;
}
.title {
  font-size: 18px;
  overflow: hidden;
  text-overflow:ellipsis;
}
.content{
  font-size: 14px;
  height: 40px; 
  word-wrap:break-word; 
  overflow: hidden;
  text-overflow:ellipsis;
}

.time {
  font-size: 12px;
  margin-right: 10px;
}

.action {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.btn {
  font-size: 12px;
  color: #3D91EF;
}

/* pages/allCourse/allCourse.wxss */

.container {
  background: #F3F4F8;
}

.tapContainer {
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  margin-top: 10px;
  background: #fff;
  padding-right: 20rpx;
  
}
.item {
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
  margin-left: 20rpx;
  justify-content: flex-start;
  background: #fff;
  align-items: center;
  border-bottom: 1px solid #F3F4F8;
}

.image_container {
  width: 80px;
  height: 80px;
}

.icon {
  width: 100%;
  height: 100%;
}

.detail {
  width: 300rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  display: flex;
  flex-direction: column;
  padding: 10px;
  justify-content: center;
}

.title {
  color: #3C4A55;
  
}
button {
  background: #4990E4;
  color: #fff;
  font-size: 14px;
  width: 80px;
  
  padding: 0px;
  margin: 0px;
}
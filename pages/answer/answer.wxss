/* pages/answers/answer.wxss */
.tapContainer {
  background: #fff;
}
.item_container {
  display: flex;
  flex-direction: column;
  
}

.item {
  display: flex;
  flex-direction: row;
  background: #fff;
  justify-content: space-between;
  padding: 10px 20px;
  border-bottom: 1px solid #F5F5F5;
  width: auto;
}

.left {
  display: flex;
  flex-direction: column;
  color: #A1A1A1;
  flex-grow: 1;
  padding-right: 10px;
}
.thumbnail {
  width: 100%;
  height: 100%;
}
.right {
  width: 100px;
  height: 80px;
  position: relative;
}
.count {
  position: absolute;
  bottom: 0px;
  right: 0px;
  background-color: black;
  opacity: 0.3;
  color: #fff;
  padding: 2px 5px;
}

.title {
  font-size: 20px;
  color: #333333;
}

.action {
  display: flex;
  justify-content: space-between;
}

.content {
  word-wrap:break-word; 
  overflow: hidden; 
  text-overflow:ellipsis;
}
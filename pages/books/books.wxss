/* pages/books/books.wxss */

page {
  height: 100%;
  background: #f3f4f8
}

.tapContainer {
  padding-bottom: 50px;
}

.item {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 10px;
  padding: 10px;
  justify-content: flex-start;
  background: #fff;
}

.icon{
  width: 60px;
  height: 60px;
  display: block;
}
.detai{
  width: 60%;
  display: flex;
  flex-direction: column;
  padding: 0 10px;
}

.title {
  font-size: 15px;
  height: 20px;
  overflow: hidden;
  text-overflow:ellipsis;
  margin-bottom: 10px;
}
.content {
  font-size: 12px;
  height: 20px;
  overflow: hidden;
  text-overflow:ellipsis;
}

.action {
  display: flex;
  flex-direction: row; 
}

.btn {
  color: #fff;
  padding: 0px;

}

.tools {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #fff;
}

.number_text {
  font-size: 14px;
  margin-left: 10px;
}
.apply_btn {
  height: 100%;
  background: #4990E4;
  color: #fff;
  margin: 0px;
  padding: 0px 10px;
  border-radius: 0;
  font-size: 15px;
}

.apply_btn::after{
  border: none;
}